<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.segmentfault.springboot.lession7.mybatis.mappers_by_starter.UserMapper">

    <resultMap id="UserResultMap" type="com.segmentfault.springboot.lession7.entity_by_starter.User">
        <id column="id" property="id"></id>
        <result column="name" property="name"></result>
        <result column="age" property="age"></result>
        <result column="desc_json" property="desc"></result>
    </resultMap>

    <select id="findUserById" parameterType="int" resultMap="UserResultMap">
        SELECT id,name,age,desc_json
        FROM user
        WHERE id=#{userId}
    </select>
</mapper>